@model IEnumerable<ForumSystem.Web.ViewModels.Home.IndexBlogPostViewModel>
@{
    ViewBag.Title = "Home Page";
}
<style>
    a {
        text-decoration: none;
    }
    span>a {
        color: whitesmoke;
    }
    #scores {
        background-color: darkred; border-radius: 5px; border:1px solid blue;
    }
</style>

<div class="container col-md-12">
    @foreach (var item in Model)
    {
        //todo:try with Media-heading Bootstarp
        <div class="row">
            <div id="scores" class="col-md-1 text-center">
                <div class="label label-success" style="background-color: darkred">
                    <p style="font-size: 2em">@item.CountVotes<br />
                    </p>
                    <span>votes</span>
                </div>
            </div>
            
            <div id="scores" class="col-md-1 text-center" >
                <div class=" label label-success" style="background-color: darkred">
                    <p style="font-size: 2em">
                        @item.CountComm<br />
                    </p>
                    <span>answers</span>
                </div>
            </div>
            <div class="col-md-7 col-md-offset-1">
                <div class="row">                    
                    <h3><a href="@Url.Action("Details","Home",new{id=item.Id})">@item.Title</a></h3>
                </div>
                <div class="row">
                    <p>Asked on..
                    @item.PostedAgo
                    </p>
                </div>
                <div class="row">
                    <span class="label label-info"><a href="#">@item.Tag</a></span>
                    <span class="label label-info">Education</span>
                    <span class="label label-info">Fun</span>
                    
                </div>
            </div>
        </div>   
        <hr/>   
    }
</div>
